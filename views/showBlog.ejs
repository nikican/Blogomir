<% include ./partials/header%>

<div class="ui main text container">
    <div class="ui huge header">
        <%=blog.title%>
    </div>
    <div class="ui top attached segment">
        <div class="item">
            <img src="<%=blog.image%>" class="ui centered rounded image"/>
            <div class="content">
                <span><%=blog.created?blog.created.toDateString():""%></span>
            </div>
            <div class="description">
                <p><%=blog.body%></p>
            </div>
            <a href="/blogs/<%=blog._id%>/edit" class="ui button orange basic">Edit</a>
            <form id="deleteForm" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui button red basic">Delete</button>
            </form>
        </div>
    </div>
    <a href="/blogs">Go back</a>
</div>

<% include ./partials/footer%>